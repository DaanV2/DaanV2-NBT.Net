<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <!-- Required elements-->
        <id>DaanV2.NBT.Net</id>
        <version>1.4.1</version>
        <description>A NBT library for reading and writing nbt files/data, with Gzip and Zlib Compression, supports for Litte and Big endian structures</description>
        <authors>Daan Verstraten</authors>

        <!-- Optional elements -->
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <license type="file">LICENSE.txt</license>
        <projectUrl>https://github.com/DaanV2/DaanV2.NBT.Net</projectUrl>
        <copyright>Daan Verstraten 2019</copyright>
        <tags>NBT</tags>
        <repository type="git" url="https://github.com/DaanV2/DaanV2.NBT.Net.git" />
		<icon>images\icon.png</icon>
        <readme>docs\README.md</readme>

        <dependencies>
            <group targetFramework="net5.0">
                <dependency id="zlib.net-mutliplatform" version="1.0.5" exclude="Build,Analyzers" />
                <dependency id="DaanV2.Essentials.Net" version="1.4.2" exclude="Build,Analyzers" />
                <dependency id="System.Buffers" version="4.5.1" exclude="Build,Analyzers" />
            </group>
        </dependencies>

        <references>
            <group targetFramework="net5.0">
                <reference file="DaanV2.NBT.Net.dll" />
            </group>
        </references>

        <!-- ... -->
    </metadata>
    <!-- Optional 'files' node -->
    <files>
        <file src="..\README.md" target="docs\" />  
        <file src="..\Nuget\images\icon.png" target="images\" />
        <file src="..\LICENSE.txt" target="" />

        <!-- Any CPU -->
        <file src="lib\net5.0\*.*" target="lib/net5.0" exclude="*.tmp;*.pdb"/>

        <!-- Frameworks -->
        <file src="lib\net5.0\*.dll" target="ref/net5.0" exclude="*.tmp;*.pdb"/>
        <file src="runtimes\**\*.*" target="runtimes" exclude="*.tmp;*.pdb"/>
    </files>
</package>
